
<body>
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <center><h1 class="page-header"><%= @category.name %></center>
                </h1>
                <ol class="breadcrumb">
                    <li><%= link_to "home", root_path %>
                    </li>
                    <li class="active"><%= @category.name %></li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Projects Row -->
        
            <div class="row">
                <% @category.listings.each do |listing| %>
                       
                            <% if listing.attachments.first %>
                                <div class="listingtiles col-md-3 img-portfolio">
                                    <%= link_to listing do %>
                        <%= image_tag listing.attachments.first.image.url(:thumb) %>

                                    <h3><%= link_to listing.title, listing %> </h3>
                                    
                                   
                                <% end %>
                            <% end %>
                        <h3>
                        
                        </h3>
                        <p><%= listing.description.truncate(150) %></p>
                         <div class="viewbutton">
                                    <%= link_to 'View', listing, class: 'btn btn-primary' %>
                                    </div>
                    </div>

                <% end %>
            </div>
        <!-- /.row -->

        <hr>
            <% if user_signed_in? %>
            <p><%= link_to 'Add a Listing', new_listing_path %></p>
            <% end %>

            <% if user_signed_in? && current_user.admin? %>
            <p><%= link_to 'Edit This Category', edit_category_path %></p>
            <p><%= link_to 'Delete This Category', @category, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <% end %>
        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Listr.ninja 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>