<body>


    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <center><h1 class="page-header">Categories</h1></center>
                <ol class="breadcrumb">
                    <li><%= link_to "home", root_path %>
                    </li>
                    <li class="active">Categories</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Projects Row -->
        <div class="row">
            <% @categories.each do |category|%>
                <div class="listingtiles2 col-md-2 img-portfolio">
                       <div class="special"><%= link_to category.name, category, class: 'btn btn-primary btn-block' %>
                       </div>
                       <div
                        class="list-group-item-text">
                            <br>
                            <p><%= category.description.truncate(100) %></p>
                        </div>
                </div>
            <% end %>
        </div>



                <!-- /.row -->

                <hr>
                <% if user_signed_in? && current_user.admin? %>
                <p><%= link_to 'Add a Category', new_category_path %></p>
                <% end %>
                <hr>

                <!-- Footer -->
                <footer>
                    <div class="row">
                        <div class="col-lg-12">
                            <p>Copyright &copy; Your Website 2014</p>
                        </div>
                    </div>
                </footer>

            </div>
            <!-- /.container -->

            <!-- jQuery -->
            <script src="js/jquery.js"></script>

            <!-- Bootstrap Core JavaScript -->
            <script src="js/bootstrap.min.js"></script>

        </body>