
<body>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%=@listing.title%>
                </h1>
                <ol class="breadcrumb">
                    <li>
                      <%= link_to 'Home', root_path %>
                    </li>
                    <li>
                      <% @listing.categories.each do |category| %>
                      <%= link_to category.name, category %> 
                      <% end %>
                    </li>
                    <li class="active">Portfolio Item</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">
           
            <div class="col-md-8">
              <% if @listing.attachments.first %>
                <%= image_tag(@listing.attachments.first.image.url(:medium)) %> 
                <% else %>
                <%= image_tag "http://placehold.it/750x450" %>
              <% end %>
            </div>
         
            
            <div class="col-md-4">
                <h3>Listing Description</h3>
                <p><%=@listing.description%></p>
                <h3>Listing Details</h3>
                <ul>
                    <li>Price: $<%= @listing.price %></li>
                    <li>Address: <%= @listing.address %></li>

                </ul>

       

              <%= image_tag "http://maps.google.com/maps/api/staticmap?size=360x315&sensor=false&zoom=16&markers=#{@listing.latitude}%2C#{@listing.longitude}" %>

            </div>

        </div>
        <!-- /.row -->

              <table>
                <tr>

                  <% if user_signed_in? && (current_user.admin? || current_user.listing_ids.include?(@listing.id)) %>
                  <td><%= link_to 'Edit This Listing', edit_listing_path %></td>

                  <td><%= link_to 'Delete This Listing', @listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>

                  <td><%= link_to 'Add an Attachment', new_listing_attachment_path(@listing) %></td>
                  <% end %>
              </tr>
            </table>

        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Other Attachments</h3>
            </div>

            <% @listing.attachments.each_with_index do |attachment, index| %> 
              <% unless index == 0 %>
              <div class="col-sm-3 col-xs-6">
                    <img class="img-responsive img-hover img-related" src="<%= image_url(attachment.image.url(:thumb)) %>" alt="">
             </div>
             <% end %>
            <% end %> 


        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>