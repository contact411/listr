
<div class="loginform">
    <div class="row">
        <center><h2 class="page-header">Listings</h2></center>

        <% @listings.each do |listing| %>

            <% if listing.attachments.first  %>
        
                <div class ="listingtiles col-md-3 img-portfolio">
                    <%= link_to listing do %> 
                        <%= image_tag listing.attachments.first.image.url(:thumb) %>
                    <% end %>
                    <div class="inner">
                        <hr>
                        
                        <h2><%= link_to listing.title, listing %></h2> 

                
                        <%= listing.description.truncate(75) %>
                    </div>
                    <div class="viewbutton">
                    <%= link_to 'View', listing.title, class: 'btn btn-primary' %>
                    </div>
                </div>

            <% end %>
        
        <% end %>
    </div>
</div>
<div>
   <% if user_signed_in? %>
<p><%= link_to 'Add a Listing', new_listing_path %></p>
<% end %>
</div>